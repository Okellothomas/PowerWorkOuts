<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PowerWorkOuts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/power_workouts_green</item>
        <item name="colorPrimaryVariant">@color/power_workouts_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/power_workouts_yellow</item>
        <item name="colorSecondaryVariant">@color/power_workouts_yellow</item>
        <item name="colorOnSecondary">@color/power_workouts_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@style/CardViewStyle</item>
    </style>

    <style name="NoAllCapsStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="RoundTopCornersImageStyle" parent="">
        <item name="cornerSizeTopRight">10%</item>
        <item name="cornerSizeTopLeft">10%</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
    </style>

    <style name="NormalTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="BoldTextStyle" parent="NormalTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/power_workouts_green</item>
    </style>


</resources>